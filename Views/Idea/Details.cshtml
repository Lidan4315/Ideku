@model Ideku.ViewModels.IdeaList.IdeaDetailViewModel

@{
    ViewData["Title"] = "Idea Details";
}

@section Styles {
    <link rel="stylesheet" href="~/css/shared/tab-navigation.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/pages/idealist-detail.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/pages/milestone-detail.css" asp-append-version="true" />
}

<div class="container-fluid">
    <div class="page-header mb-4 d-flex justify-content-between align-items-center">
        <div>
            <h2 class="page-title text-gradient">
                <i class="bi bi-lightbulb me-2"></i>Idea Details
            </h2>
            <p class="text-muted mb-0">@Model.Idea.IdeaCode - @Model.Idea.IdeaName</p>
        </div>
        <div>
            <a href="@Url.Action("Index", "Idea")" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Back to My Ideas
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Tab Navigation Section -->
    <div class="view-toggle-section mb-4">
        <div class="btn-group w-100" role="group" aria-label="View toggle">
            <input type="radio" class="btn-check" name="viewOptions" id="detailsView" autocomplete="off" checked>
            <label class="btn btn-outline-primary" for="detailsView">
                <i class="bi bi-info-circle me-2"></i>Details
            </label>

            <input type="radio" class="btn-check" name="viewOptions" id="approvalHistoryView" autocomplete="off">
            <label class="btn btn-outline-primary" for="approvalHistoryView">
                <i class="bi bi-clock-history me-2"></i>Approval History
            </label>

            <input type="radio" class="btn-check" name="viewOptions" id="milestoneView" autocomplete="off">
            <label class="btn btn-outline-primary" for="milestoneView">
                <i class="bi bi-flag me-2"></i>Milestone
            </label>

            <input type="radio" class="btn-check" name="viewOptions" id="monitoringView" autocomplete="off">
            <label class="btn btn-outline-primary" for="monitoringView">
                <i class="bi bi-graph-up me-2"></i>Monitoring
            </label>
        </div>
    </div>

    <!-- Content Sections -->
    <div id="tabContent">

        <!-- Details View (Active by default) -->
        <div id="detailsViewContent" class="view-content">
            <!-- Use Shared Idea Details Partial -->
            @await Html.PartialAsync("_IdeaDetails", Model.Idea)

            <!-- Attachments and Team Assembly Section Side by Side -->
            <div class="row">
                <div class="col-md-6">
                    <!-- Attachments Section -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h5 class="m-0 font-weight-bold text-primary">
                                <i class="bi bi-paperclip me-2"></i>Attachments
                            </h5>
                        </div>
                        <div class="card-body">
                            @await Html.PartialAsync("_IdeaAttachments", Model.Idea)
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <!-- Team Assembly Section (View Only) -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h5 class="m-0 font-weight-bold text-primary">
                                <i class="bi bi-people me-2"></i>Team Assembly
                            </h5>
                        </div>
                        <div class="card-body">
                            <!-- Leader Section -->
                            <div class="form-group-view mb-4">
                                <label>
                                    <i class="bi bi-star-fill text-warning me-2"></i>Leader
                                </label>
                                @{
                                    var leader = Model.Implementators.FirstOrDefault(i => i.Role == "Leader");
                                }
                                @if (leader != null)
                                {
                                    <p>@leader.User?.Name</p>
                                }
                                else
                                {
                                    <p class="text-muted">
                                        <i class="bi bi-info-circle me-2"></i>No leader assigned yet.
                                    </p>
                                }
                            </div>

                            <!-- Members Section -->
                            @{
                                var members = Model.Implementators.Where(i => i.Role == "Member").ToList();
                            }
                            @if (members.Any())
                            {
                                <!-- Members Label (only once) -->
                                <div class="form-group-view">
                                    <label>
                                        <i class="bi bi-people-fill text-primary me-2"></i>Members
                                    </label>
                                </div>

                                <!-- Individual Member Fields -->
                                @foreach (var member in members)
                                {
                                    <div class="form-group-view mb-3">
                                        <p>@member.User?.Name</p>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="form-group-view">
                                    <label>
                                        <i class="bi bi-people-fill text-primary me-2"></i>Members
                                    </label>
                                    <p class="text-muted">
                                        <i class="bi bi-info-circle me-2"></i>No members assigned yet.
                                    </p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Approval History View -->
        <div id="approvalHistoryViewContent" class="view-content d-none">
            <div class="card">
                <div class="card-header py-3">
                    <h5 class="m-0 font-weight-bold text-primary">
                        <i class="bi bi-clock-history me-2"></i>Approval History
                    </h5>
                </div>
                <div class="card-body text-center py-5">
                    <i class="bi bi-clock-history display-1 text-muted mb-3"></i>
                    <h5 class="text-muted">Approval History</h5>
                    <p class="text-muted">This feature will be implemented soon.</p>
                    <p class="text-muted"><small>Track the complete approval workflow and history for this idea.</small></p>
                </div>
            </div>
        </div>

        <!-- Milestone View -->
        <div id="milestoneViewContent" class="view-content d-none">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-calendar3 me-2"></i>Milestone Calendar
                    </h5>
                    <div class="d-flex align-items-center gap-2">
                        <button type="button" class="btn btn-sm btn-outline-secondary" id="prevMonth">
                            <i class="bi bi-chevron-left"></i>
                        </button>
                        <span class="fw-semibold" id="currentMonth"></span>
                        <button type="button" class="btn btn-sm btn-outline-secondary" id="nextMonth">
                            <i class="bi bi-chevron-right"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div id="calendar-container">
                        <!-- Calendar will be rendered here -->
                    </div>
                </div>
            </div>
        </div>

        <!-- Monitoring View -->
        <div id="monitoringViewContent" class="view-content d-none">
            <div class="card">
                <div class="card-header py-3">
                    <h5 class="m-0 font-weight-bold text-primary">
                        <i class="bi bi-graph-up me-2"></i>Monitoring & Analytics
                    </h5>
                </div>
                <div class="card-body text-center py-5">
                    <i class="bi bi-graph-up display-1 text-muted mb-3"></i>
                    <h5 class="text-muted">Monitoring & Analytics</h5>
                    <p class="text-muted">This feature will be implemented soon.</p>
                    <p class="text-muted"><small>Monitor progress, metrics, and analytics for this idea.</small></p>
                </div>
            </div>
        </div>

    </div>
</div>

<!-- Include File Preview Modal -->
@await Html.PartialAsync("_FilePreviewModal")

@section Scripts {
<script>
let currentDate = new Date(); // Define currentDate globally or within a scope that persists

$(document).ready(function() {
    // Initialize Tab Navigation
    initializeTabNavigation();

    // Set up calendar navigation buttons once
    document.getElementById('prevMonth').addEventListener('click', function() {
        currentDate.setMonth(currentDate.getMonth() - 1);
        renderCalendar();
    });

    document.getElementById('nextMonth').addEventListener('click', function() {
        currentDate.setMonth(currentDate.getMonth() + 1);
        renderCalendar();
    });
});

// Tab Navigation Functions
function initializeTabNavigation() {
    const detailsViewBtn = document.getElementById('detailsView');
    const approvalHistoryViewBtn = document.getElementById('approvalHistoryView');
    const milestoneViewBtn = document.getElementById('milestoneView');
    const monitoringViewBtn = document.getElementById('monitoringView');

    const detailsViewContent = document.getElementById('detailsViewContent');
    const approvalHistoryViewContent = document.getElementById('approvalHistoryViewContent');
    const milestoneViewContent = document.getElementById('milestoneViewContent');
    const monitoringViewContent = document.getElementById('monitoringViewContent');

    // Details View
    detailsViewBtn.addEventListener('change', function() {
        if (this.checked) {
            showView(detailsViewContent);
            hideViews([approvalHistoryViewContent, milestoneViewContent, monitoringViewContent]);
        }
    });

    // Approval History View
    approvalHistoryViewBtn.addEventListener('change', function() {
        if (this.checked) {
            showView(approvalHistoryViewContent);
            hideViews([detailsViewContent, milestoneViewContent, monitoringViewContent]);
        }
    });

    // Milestone View
    milestoneViewBtn.addEventListener('change', function() {
        if (this.checked) {
            showView(milestoneViewContent);
            hideViews([detailsViewContent, approvalHistoryViewContent, monitoringViewContent]);
            renderCalendar(); // <-- Call renderCalendar directly when Milestone tab is selected
        }
    });

    // Monitoring View
    monitoringViewBtn.addEventListener('change', function() {
        if (this.checked) {
            showView(monitoringViewContent);
            hideViews([detailsViewContent, approvalHistoryViewContent, milestoneViewContent]);
        }
    });
}

function showView(view) {
    view.classList.remove('d-none');
}

function hideViews(views) {
    views.forEach(view => {
        view.classList.add('d-none');
    });
}

// Calendar Functions
function renderCalendar() {
    const year = currentDate.getFullYear();
    const month = currentDate.getMonth();

    // Update month display
    const monthNames = [
        "January", "February", "March", "April", "May", "June",
        "July", "August", "September", "October", "November", "December"
    ];
    document.getElementById('currentMonth').textContent = `${monthNames[month]} ${year}`;

    // Get first day of month and number of days
    const firstDay = new Date(year, month, 1);
    const lastDay = new Date(year, month + 1, 0);
    const daysInMonth = lastDay.getDate();
    const startingDayOfWeek = firstDay.getDay();

    // Get milestones data
    const milestones = @Html.Raw(Json.Serialize(Model.Milestones.Select(m => new {
        id = m.Id,
        title = m.TitleMilestone,
        startDate = m.StartDate.ToString("yyyy-MM-dd"),
        endDate = m.EndDate.ToString("yyyy-MM-dd"),
        status = m.Status
    })));

    // Create calendar grid
    let calendarHTML = `
        <div class="calendar-grid">
            <div class="calendar-header">Sun</div>
            <div class="calendar-header">Mon</div>
            <div class="calendar-header">Tue</div>
            <div class="calendar-header">Wed</div>
            <div class="calendar-header">Thu</div>
            <div class="calendar-header">Fri</div>
            <div class="calendar-header">Sat</div>
    `;

    // Add previous month's trailing days
    const prevMonthDate = new Date(year, month - 1, 0);
    const prevMonthDays = prevMonthDate.getDate();

    for (let i = startingDayOfWeek - 1; i >= 0; i--) {
        const day = prevMonthDays - i;
        calendarHTML += `<div class="calendar-cell other-month">
            <div class="calendar-date">${day}</div>
        </div>`;
    }

    // Add current month's days
    const today = new Date();
    for (let day = 1; day <= daysInMonth; day++) {
        const cellDate = new Date(year, month, day);
        const isToday = cellDate.toDateString() === today.toDateString();
        const cellClass = isToday ? 'calendar-cell today' : 'calendar-cell';

        // Find milestones for this date
        const dayMilestones = milestones.filter(milestone => {
            const startDate = new Date(milestone.startDate);
            const endDate = new Date(milestone.endDate);
            // Check if the cellDate falls within the milestone's date range
            return cellDate >= new Date(startDate.getFullYear(), startDate.getMonth(), startDate.getDate()) &&
                   cellDate <= new Date(endDate.getFullYear(), endDate.getMonth(), endDate.getDate());
        });

        let milestonesHTML = '';
        dayMilestones.forEach(milestone => {
            const statusClass = `status-${milestone.status.toLowerCase().replace(' ', '-')}`;
            milestonesHTML += `
                <div class="milestone-item ${statusClass}" title="${milestone.title} (${milestone.status})">
                    ${milestone.title}
                </div>
            `;
        });

        calendarHTML += `
            <div class="${cellClass}">
                <div class="calendar-date">${day}</div>
                ${milestonesHTML}
            </div>
        `;
    }

    // Add next month's leading days
    const totalCells = Math.ceil((startingDayOfWeek + daysInMonth) / 7) * 7;
    const remainingCells = totalCells - (startingDayOfWeek + daysInMonth);

    for (let day = 1; day <= remainingCells; day++) {
        calendarHTML += `<div class="calendar-cell other-month">
            <div class="calendar-date">${day}</div>
        </div>`;
    }

    calendarHTML += '</div>';

    // Update calendar container
    document.getElementById('calendar-container').innerHTML = calendarHTML;
}
</script>
}
