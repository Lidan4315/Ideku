@model Ideku.ViewModels.IdeaList.IdeaDetailViewModel

@{
    ViewData["Title"] = "Idea Details";
}

@section Styles {
    <link rel="stylesheet" href="~/css/shared/tab-navigation.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/shared/approval-history-timeline.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/pages/idealist-detail.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/pages/milestone-detail.css" asp-append-version="true" />
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="page-header-modern mb-4">
        <div>
            <h1 class="page-title text-gradient mb-3">
                Idea Details
            </h1>

            <!-- Breadcrumb Navigation -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Idea")">My Ideas</a>
                    </li>
                    <li class="breadcrumb-item">Details</li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Idea.IdeaCode</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Inactive Idea Warning -->
    @await Html.PartialAsync("_InactiveIdeaWarning", Model.Idea)

    <!-- Tab Navigation Section -->
    <div class="view-toggle-section mb-4">
        <div class="btn-group w-100" role="group" aria-label="View toggle">
            <input type="radio" class="btn-check" name="viewOptions" id="detailsView" autocomplete="off" checked>
            <label class="btn btn-outline-primary" for="detailsView">
                <i class="bi bi-info-circle me-md-2"></i><span class="d-none d-md-inline">Details</span>
            </label>

            <input type="radio" class="btn-check" name="viewOptions" id="approvalHistoryView" autocomplete="off">
            <label class="btn btn-outline-primary" for="approvalHistoryView">
                <i class="bi bi-clock-history me-md-2"></i><span class="d-none d-md-inline">Approval History</span>
            </label>

            <input type="radio" class="btn-check" name="viewOptions" id="milestoneView" autocomplete="off">
            <label class="btn btn-outline-primary" for="milestoneView">
                <i class="bi bi-flag me-md-2"></i><span class="d-none d-md-inline">Milestone</span>
            </label>

            <input type="radio" class="btn-check" name="viewOptions" id="monitoringView" autocomplete="off">
            <label class="btn btn-outline-primary" for="monitoringView">
                <i class="bi bi-graph-up me-md-2"></i><span class="d-none d-md-inline">Monitoring</span>
            </label>
        </div>
    </div>

    <!-- Content Sections -->
    <div id="tabContent">

        <!-- Details View (Active by default) -->
        <div id="detailsViewContent" class="view-content">
            <!-- Use Shared Idea Details Partial -->
            @{
                ViewData["ShowIdeaActions"] = true;
            }
            @await Html.PartialAsync("_IdeaDetails", Model.Idea)

            <!-- Attachments and Team Assembly Section Side by Side -->
            <div class="row">
                <div class="col-md-6">
                    <!-- Attachments Section -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h5 class="m-0 font-weight-bold text-gradient">
                                <i class="bi bi-paperclip me-2"></i>Attachments
                            </h5>
                        </div>
                        <div class="card-body">
                            @await Html.PartialAsync("_IdeaAttachments", Model.Idea)
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <!-- Team Assembly Section (View Only) -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h5 class="m-0 font-weight-bold text-gradient">
                                <i class="bi bi-people me-2"></i>Team Assembly
                            </h5>
                        </div>
                        <div class="card-body">
                            @{
                                var leader = Model.Implementators.FirstOrDefault(i => i.Role == "Leader");
                                var members = Model.Implementators.Where(i => i.Role == "Member").ToList();
                                var hasTeam = leader != null || members.Any();
                            }

                            @if (!hasTeam)
                            {
                                <div class="text-center text-muted py-4">
                                    <i class="bi bi-people" style="font-size: 2rem; opacity: 0.5;"></i>
                                    <p class="mt-2 mb-0">No team assigned yet</p>
                                </div>
                            }
                            else
                            {
                                <!-- Leader Section -->
                                @if (leader != null)
                                {
                                    <div class="form-group-view mb-4">
                                        <label>
                                            <i class="bi bi-star-fill text-warning me-2"></i>Leader
                                        </label>
                                        <p>@leader.User?.Name</p>
                                    </div>
                                }

                                <!-- Members Section -->
                                @if (members.Any())
                                {
                                    <!-- Members Label (only once) -->
                                    <div class="form-group-view">
                                        <label>
                                            <i class="bi bi-people-fill text-primary me-2"></i>Members
                                        </label>
                                    </div>

                                    <!-- Individual Member Fields -->
                                    @foreach (var member in members)
                                    {
                                        <div class="form-group-view mb-3">
                                            <p>@member.User?.Name</p>
                                        </div>
                                    }
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Approval History View -->
        <div id="approvalHistoryViewContent" class="view-content d-none">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="bi bi-clock-history me-2"></i>Approval History
                    </h6>
                </div>
                <div class="card-body">
                    @await Html.PartialAsync("_ApprovalHistoryTimeline", Model.WorkflowHistory)
                </div>
            </div>
        </div>

        <!-- Milestone View -->
        <div id="milestoneViewContent" class="view-content d-none">
            @await Html.PartialAsync("_MilestoneCalendar", Model.Milestones)
        </div>

        <!-- Monitoring View -->
        <div id="monitoringViewContent" class="view-content d-none">
            <div class="card">
                <div class="card-header py-3">
                    <h5 class="m-0 font-weight-bold text-primary">
                        <i class="bi bi-graph-up me-2"></i>Monitoring & Analytics
                    </h5>
                </div>
                <div class="card-body text-center py-5">
                    <i class="bi bi-graph-up display-1 text-muted mb-3"></i>
                    <h5 class="text-muted">Monitoring & Analytics</h5>
                    <p class="text-muted">This feature will be implemented soon.</p>
                    <p class="text-muted"><small>Monitor progress, metrics, and analytics for this idea.</small></p>
                </div>
            </div>
        </div>

    </div>
</div>

<!-- Include File Preview Modal -->
@await Html.PartialAsync("_FilePreviewModal")

<!-- Edit & Delete Idea Modal -->
@await Html.PartialAsync("_EditIdeaModal", Model)

@section Scripts {
<script>
$(document).ready(function() {
    // Initialize Tab Navigation
    initializeTabNavigation();
});

// Tab Navigation Functions
function initializeTabNavigation() {
    const detailsViewBtn = document.getElementById('detailsView');
    const approvalHistoryViewBtn = document.getElementById('approvalHistoryView');
    const milestoneViewBtn = document.getElementById('milestoneView');
    const monitoringViewBtn = document.getElementById('monitoringView');

    const detailsViewContent = document.getElementById('detailsViewContent');
    const approvalHistoryViewContent = document.getElementById('approvalHistoryViewContent');
    const milestoneViewContent = document.getElementById('milestoneViewContent');
    const monitoringViewContent = document.getElementById('monitoringViewContent');

    // Details View
    detailsViewBtn.addEventListener('change', function() {
        if (this.checked) {
            showView(detailsViewContent);
            hideViews([approvalHistoryViewContent, milestoneViewContent, monitoringViewContent]);
        }
    });

    // Approval History View
    approvalHistoryViewBtn.addEventListener('change', function() {
        if (this.checked) {
            showView(approvalHistoryViewContent);
            hideViews([detailsViewContent, milestoneViewContent, monitoringViewContent]);
        }
    });

    // Milestone View
    milestoneViewBtn.addEventListener('change', function() {
        if (this.checked) {
            showView(milestoneViewContent);
            hideViews([detailsViewContent, approvalHistoryViewContent, monitoringViewContent]);
            // Calendar will render automatically via partial's embedded script
            // Trigger re-render when switching to milestone view
            if (typeof window.renderMilestoneCalendar === 'function') {
                window.renderMilestoneCalendar();
            }
        }
    });

    // Monitoring View
    monitoringViewBtn.addEventListener('change', function() {
        if (this.checked) {
            showView(monitoringViewContent);
            hideViews([detailsViewContent, approvalHistoryViewContent, milestoneViewContent]);
        }
    });
}

function showView(view) {
    view.classList.remove('d-none');
}

function hideViews(views) {
    views.forEach(view => {
        view.classList.add('d-none');
    });
}
</script>
}
