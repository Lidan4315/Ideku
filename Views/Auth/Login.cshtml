@model Ideku.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ideku</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="login-page">
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-11 col-md-10 col-lg-8 col-xl-7">
                <div class="login-card-wide">
                    <div class="row g-0">
                        <!-- Left Side - Image Area -->
                        <div class="col-md-6">
                            <div class="login-image-section">
                                <img src="~/images/login-image.jpeg" alt="Ideku Mining" class="login-image" />
                            </div>
                        </div>

                        <!-- Right Side - Form Area -->
                        <div class="col-md-6">
                            <div class="login-form-section">
                                <div class="text-center mb-4">
                                    <h3 class="fw-bold">Welcome to Ideku</h3>
                                    <p class="text-muted">Sign in to your account</p>
                                </div>

                                <form asp-action="Login" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                                    <div class="mb-3">
                                        <label asp-for="Username" class="form-label">
                                            <i class="bi bi-person me-2"></i>Username
                                        </label>
                                        <input asp-for="Username" class="form-control form-control-lg" placeholder="Enter your username" />
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>

                                    <div class="mb-4 form-check">
                                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                                        <label asp-for="RememberMe" class="form-check-label">
                                            Remember me
                                        </label>
                                    </div>

                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary btn-lg">
                                            <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>