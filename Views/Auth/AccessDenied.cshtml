@{
    ViewData["Title"] = "Access Denied";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ideku</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #fcfcfc;
        }

        .access-denied-container {
            text-align: center;
        }

        .access-denied-image {
            max-width: 500px;
            width: 100%;
            height: auto;
            display: block;
            margin: 0 auto;
        }

        .access-denied-text {
            margin: 10px 0 30px 0;
            font-size: 1.2rem;
            color: #333333;
        }

        .btn-container {
            display: flex;
            gap: 1rem;
            justify-content: center;
        }
    </style>
</head>
<body>
    <div class="access-denied-container">
        <img src="~/images/No-Access.png" alt="Access Denied" class="access-denied-image" />
        <p class="access-denied-text">You don't have permission to access this resource.</p>
        <div class="btn-container">
            <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Go Home</a>
            <a asp-action="Login" asp-controller="Auth" class="btn btn-light">Logout</a>
        </div>
    </div>
</body>
</html>