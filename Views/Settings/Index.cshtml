@{
    ViewData["Title"] = "Settings";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-header mb-4">
                <h2 class="page-title text-gradient">
                    <i class="bi bi-sliders me-2"></i>Settings
                </h2>
                <p class="text-muted">Manage system configurations and workflows</p>
            </div>

            <div class="row g-4">
                <!-- Workflow Management Card -->
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                    <div class="settings-card" onclick="navigateToWorkflow()">
                        <div class="card-icon workflow-icon">
                            <i class="bi bi-diagram-3"></i>
                        </div>
                        <h3 class="card-title">Workflow Management</h3>
                    </div>
                </div>

                <!-- User Management Card -->
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                    <div class="settings-card" onclick="showComingSoon('User Management')">
                        <div class="card-icon user-icon">
                            <i class="bi bi-people"></i>
                        </div>
                        <h3 class="card-title">User Management</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function navigateToWorkflow() {
            // Navigate to workflow management page
            window.location.href = '/Settings/WorkflowManagement';
        }

        function showComingSoon(featureName) {
            Swal.fire({
                icon: 'info',
                title: 'Coming Soon!',
                text: `${featureName} feature is under development and will be available in future updates.`,
                confirmButtonText: 'OK',
                confirmButtonColor: '#3b82f6'
            });
        }
    </script>
}

<style>
    .page-header {
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        padding: 2rem;
        border-radius: 1rem;
        border: 1px solid #e5e7eb;
    }
    
    .page-title {
        font-weight: 700;
        margin-bottom: 0.5rem;
        background: linear-gradient(135deg, #1e40af, #3b82f6);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .settings-card {
        background: white;
        border-radius: 1rem;
        padding: 2rem;
        height: 180px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        border: 1px solid #e5e7eb;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        cursor: pointer;
    }

    .settings-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 24px -8px rgba(0, 0, 0, 0.2);
        border-color: #3b82f6;
    }

    .card-icon {
        width: 70px;
        height: 70px;
        border-radius: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
        font-size: 2rem;
    }

    .workflow-icon {
        background: linear-gradient(135deg, #e0f2fe, #b3e5fc);
        color: #0277bd;
    }

    .user-icon {
        background: linear-gradient(135deg, #f3e5f5, #e1bee7);
        color: #7b1fa2;
    }

    .card-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #1f2937;
        margin: 0;
        line-height: 1.3;
    }

    @@media (max-width: 768px) {
        .settings-card {
            padding: 1.5rem;
        }
        
        .card-icon {
            width: 60px;
            height: 60px;
            font-size: 1.75rem;
        }
    }
</style>