@{
    ViewData["Title"] = "Settings";
}

@section Styles {
    <link href="~/css/pages/settings.css" rel="stylesheet" asp-append-version="true" />
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-header mb-4">
                <h2 class="page-title text-gradient">
                    <i class="bi bi-sliders me-2"></i>Settings
                </h2>
                <p class="text-muted">Manage system configurations and workflows</p>
            </div>

            <div class="row g-4">
                <!-- Workflow Management Card -->
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                    <div class="settings-card" onclick="navigateToWorkflow()">
                        <div class="card-icon workflow-icon">
                            <i class="bi bi-diagram-3"></i>
                        </div>
                        <h3 class="card-title">Workflow Management</h3>
                    </div>
                </div>

                <!-- Level Management Card -->
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                    <div class="settings-card" onclick="navigateToLevel()">
                        <div class="card-icon level-icon">
                            <i class="bi bi-list-ol"></i>
                        </div>
                        <h3 class="card-title">Level Management</h3>
                    </div>
                </div>

                <!-- User Management Card -->
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                    <div class="settings-card" onclick="showComingSoon('User Management')">
                        <div class="card-icon user-icon">
                            <i class="bi bi-people"></i>
                        </div>
                        <h3 class="card-title">User Management</h3>
                    </div>
                </div>

                <!-- Role Management Card -->
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                    <div class="settings-card" onclick="showComingSoon('Role Management')">
                        <div class="card-icon role-icon">
                            <i class="bi bi-person-badge"></i>
                        </div>
                        <h3 class="card-title">Role Management</h3>
                    </div>
                </div>

                <!-- Access Control Card -->
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                    <div class="settings-card" onclick="showComingSoon('Access Control')">
                        <div class="card-icon access-icon">
                            <i class="bi bi-shield-check"></i>
                        </div>
                        <h3 class="card-title">Access Control</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/pages/settings.js" asp-append-version="true"></script>
}