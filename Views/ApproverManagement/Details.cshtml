@model Ideku.ViewModels.ApproverManagement.ApproverDetailsViewModel
@{
    ViewData["Title"] = "Approver Details";
}

@section Styles {
    <link href="~/css/pages/approver-management-details.css" rel="stylesheet" asp-append-version="true" />
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Header Section -->
            <div class="page-header mb-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="d-flex align-items-center mb-2">
                            <a href="@Url.Action("Index", "ApproverManagement")" class="btn btn-outline-secondary me-3" title="Back to Approver List">
                                <i class="bi bi-arrow-left"></i>
                            </a>
                            <h2 class="page-title text-gradient mb-0">
                                <i class="bi bi-diagram-3 me-2"></i>Approver Details
                            </h2>
                        </div>
                        <p class="text-muted">Detailed information about approver configuration</p>
                    </div>
                    <div>
                        <!-- Buttons moved to Level Information section -->
                    </div>
                </div>
            </div>

            <!-- Approver Information Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-info-circle me-2"></i>Approver Information
                        </h5>
                        <div class="d-flex gap-2">
                            <button type="button" class="btn btn-sm btn-outline-primary" onclick="openEditApproverModal(@Model.Approver.Id, '@Model.Approver.ApproverName', @Model.Approver.IsActive.ToString().ToLower())">
                                <i class="bi bi-pencil me-1"></i>Edit
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="confirmDeleteApprover(@Model.Approver.Id, '@Model.Approver.ApproverName')">
                                <i class="bi bi-trash me-1"></i>Delete
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-group mb-4">
                                <label class="info-label">Approver ID</label>
                                <div class="info-value">
                                    <span class="badge bg-light text-dark fs-6 px-3 py-2">@Model.Approver.Id</span>
                                </div>
                            </div>
                            
                            <div class="info-group mb-4">
                                <label class="info-label">Approver Code</label>
                                <div class="info-value">
                                    <span class="badge bg-primary fs-6 px-3 py-2">@Model.Approver.ApproverName</span>
                                </div>
                            </div>
                            
                            <div class="info-group mb-4">
                                <label class="info-label">Status</label>
                                <div class="info-value">
                                    @{
                                        var statusClass = Model.Approver.IsActive ? "bg-success" : "bg-danger";
                                        var statusText = Model.Approver.IsActive ? "Active" : "Inactive";
                                        var statusIcon = Model.Approver.IsActive ? "bi-check-circle" : "bi-x-circle";
                                    }
                                    <span class="badge @statusClass fs-6 px-3 py-2">
                                        <i class="@statusIcon me-2"></i>@statusText
                                    </span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="info-group mb-4">
                                <label class="info-label">Created Date</label>
                                <div class="info-value">
                                    <div class="text-dark fw-semibold">@Model.Approver.CreatedAt.ToString("MMMM dd, yyyy")</div>
                                    <small class="text-muted">@Model.Approver.CreatedAt.ToString("HH:mm:ss")</small>
                                </div>
                            </div>
                            
                            <div class="info-group mb-4">
                                <label class="info-label">Last Updated</label>
                                <div class="info-value">
                                    @if (Model.Approver.UpdatedAt.HasValue)
                                    {
                                        <div class="text-dark fw-semibold">@Model.Approver.UpdatedAt.Value.ToString("MMMM dd, yyyy")</div>
                                        <small class="text-muted">@Model.Approver.UpdatedAt.Value.ToString("HH:mm:ss")</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Never updated</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>


            <!-- Approver Roles -->
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-people me-2"></i>Approver Roles
                        </h5>
                        <button type="button" class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addApproverRoleModal">
                            <i class="bi bi-plus-circle me-1"></i>Add Role
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.ApproverRoles.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var approverRole in Model.ApproverRoles)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="ms-2 me-auto">
                                        <div class="fw-bold">@approverRole.RoleName</div>
                                    </div>
                                    <div class="d-flex align-items-center gap-2">
                                        <div>
                                            <span class="badge bg-primary rounded-pill">Role</span>
                                        </div>
                                        <button type="button" class="btn btn-outline-danger btn-sm" 
                                                onclick="confirmDeleteApproverRole(@approverRole.Id, '@approverRole.RoleName')" 
                                                title="Remove Role">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-people display-6 text-muted mb-3"></i>
                            <p class="text-muted mb-0">No roles assigned to this approver</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Approver Role Modal -->
<div class="modal fade" id="addApproverRoleModal" tabindex="-1" aria-labelledby="addApproverRoleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content app-modal">
            <div class="modal-header app-modal-header">
                <div class="d-flex align-items-center">
                    <div class="modal-icon">
                        <i class="bi bi-person-plus"></i>
                    </div>
                    <div>
                        <h5 class="modal-title mb-0" id="addApproverRoleModalLabel">Add Approver Role</h5>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="addApproverRoleForm">
                <div class="modal-body app-modal-body">
                    <input type="hidden" id="approverId" name="approverId" value="@Model.Approver.Id" />
                    
                    <!-- Role Selection -->
                    <div class="mb-4">
                        <label for="roleId" class="form-label">Role <span class="text-danger">*</span></label>
                        <div class="input-group input-group-enhanced">
                            <span class="input-group-text">
                                <i class="bi bi-person-badge"></i>
                            </span>
                            <select class="form-select" id="roleId" name="roleId" required>
                                <option value="">Select a role...</option>
                                @foreach (var role in Model.RoleList)
                                {
                                    <option value="@role.Value">@role.Text</option>
                                }
                            </select>
                        </div>
                        <div class="form-text">
                            <i class="bi bi-info-circle me-1"></i>
                            Choose the role that will be assigned to this approver
                        </div>
                    </div>
                </div>
                <div class="modal-footer app-modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-2"></i>Cancel
                    </button>
                    <button type="submit" class="btn btn-primary btn-save">
                        <i class="bi bi-check-circle me-2"></i>Add Role
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Approver Modal -->
<div class="modal fade" id="editApproverModal" tabindex="-1" aria-labelledby="editApproverModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content app-modal">
            <div class="modal-header app-modal-header">
                <div class="d-flex align-items-center">
                    <div class="modal-icon">
                        <i class="bi bi-pencil-square"></i>
                    </div>
                    <div>
                        <h5 class="modal-title mb-0" id="editApproverModalLabel">Edit Approver</h5>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="editApproverForm">
                <div class="modal-body app-modal-body">
                    <input type="hidden" id="editApproverId" name="id">
                    
                    <!-- Approver Code -->
                    <div class="mb-4">
                        <label for="editApproverName" class="form-label">Approver Code <span class="text-danger">*</span></label>
                        <div class="input-group input-group-enhanced">
                            <span class="input-group-text">
                                <i class="bi bi-layers"></i>
                                APV_
                            </span>
                            <input type="text" class="form-control" id="editApproverName" name="approverName" required 
                                   placeholder="E.G. 01, 02, MANAGER, ETC." style="text-transform: uppercase;">
                        </div>
                        <div class="form-text">
                            <i class="bi bi-info-circle me-1"></i>
                            Enter approver identifier (will be prefixed with APV_ and converted to uppercase)
                        </div>
                    </div>
                    
                    <!-- Status -->
                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="editIsActive" name="isActive">
                            <label class="form-check-label" for="editIsActive">
                                <strong>Active Approver</strong>
                            </label>
                        </div>
                        <div class="form-text">
                            <i class="bi bi-info-circle me-1"></i>
                            Inactive approvers will not be available for new workflows
                        </div>
                    </div>
                </div>
                <div class="modal-footer app-modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-2"></i>Cancel
                    </button>
                    <button type="submit" class="btn btn-primary btn-save">
                        <i class="bi bi-check-circle me-2"></i>Update Approver
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Set up URLs for approver management details
        window.approverManagementUrls = {
            addApproverRole: '@Url.Action("AddApproverRole", "ApproverManagement")',
            deleteApproverRole: '@Url.Action("DeleteApproverRole", "ApproverManagement")',
            edit: '@Url.Action("Edit", "ApproverManagement")',
            editBasic: '@Url.Action("EditBasic", "ApproverManagement")',
            getApprover: '@Url.Action("GetApprover", "ApproverManagement")',
            delete: '@Url.Action("Delete", "ApproverManagement")'
        };
        
        // Open edit approver modal function
        function openEditApproverModal(id, approverName, isActive) {
            // Set basic data
            document.getElementById('editApproverId').value = id;
            
            // Remove APV_ prefix for display
            var displayName = approverName.startsWith('APV_') ? approverName.substring(2) : approverName;
            document.getElementById('editApproverName').value = displayName;
            
            document.getElementById('editIsActive').checked = isActive;
            
            // Show modal directly (no need to fetch roles data)
            var editModal = new bootstrap.Modal(document.getElementById('editApproverModal'));
            editModal.show();
        }
    </script>
    <script src="~/js/pages/approver-management-details.js" asp-append-version="true"></script>
}