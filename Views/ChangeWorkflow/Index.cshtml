    // Open change workflow modal
    function openChangeWorkflowModal(ideaId, ideaCode, currentWorkflow, currentWorkflowId) {
        console.log('Opening modal for:', ideaId, ideaCode, currentWorkflow, currentWorkflowId);

        document.getElementById('modalIdeaId').value = ideaId;
        document.getElementById('modalIdeaCodeSubtitle').textContent = `Update workflow for ${ideaCode}`;
        document.getElementById('modalCurrentWorkflow').value = currentWorkflow || 'N/A';

        const form = document.getElementById('changeWorkflowForm');
        form.classList.remove('was-validated');

        const workflowSelect = document.getElementById('modalNewWorkflow');
        workflowSelect.value = '';

        // Filter out current workflow from options
        Array.from(workflowSelect.options).forEach(option => {
            if (option.value == currentWorkflowId) {
                option.disabled = true;
                option.textContent = option.textContent.replace(' (Current)', '') + ' (Current)';
            } else {
                option.disabled = false;
                option.textContent = option.textContent.replace(' (Current)', '');
            }
        });

        if (changeWorkflowModal) {
            changeWorkflowModal.show();
        } else {
            console.error('Modal not initialized');
        }
    }

    // Save workflow change
    function saveWorkflowChange() {
        const form = document.getElementById('changeWorkflowForm');

        if (!form.checkValidity()) {
            form.classList.add('was-validated');
            Swal.fire({
                icon: 'warning',
                title: 'Validation Error',
                text: 'Please select a new workflow',
                confirmButtonColor: '#3b82f6'
            });
            return;
        }

        const ideaId = document.getElementById('modalIdeaId').value;
        const newWorkflowId = document.getElementById('modalNewWorkflow').value;
        const newWorkflowText = document.getElementById('modalNewWorkflow').options[document.getElementById('modalNewWorkflow').selectedIndex].text;

        if (!ideaId || !newWorkflowId) {
            Swal.fire({
                icon: 'warning',
                title: 'Validation Error',
                text: 'Please select a workflow',
                confirmButtonColor: '#3b82f6'
            });
            return;
        }

        // Show confirmation dialog
        Swal.fire({
            title: 'Confirm Workflow Change',
            html: `Are you sure you want to change the workflow to <strong>${newWorkflowText}</strong>?<br><br><span class="text-warning"><i class="bi bi-exclamation-triangle me-1"></i>This will reset the approval process.</span>`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3b82f6',
            cancelButtonColor: '#6b7280',
            confirmButtonText: '<i class="bi bi-check-circle me-2"></i>Yes, Change It',
            cancelButtonText: '<i class="bi bi-x-circle me-2"></i>Cancel',
            customClass: {
                confirmButton: 'btn btn-primary px-4 me-2',
                cancelButton: 'btn btn-secondary px-4'
            },
            buttonsStyling: false
        }).then((result) => {
            if (result.isConfirmed) {
                // Show loading state
                Swal.fire({
                    title: 'Processing...',
                    text: 'Please wait while we update the workflow.',
                    icon: 'info',
                    allowOutsideClick: false,
                    allowEscapeKey: false,
                    showConfirmButton: false,
                    didOpen: () => {
                        Swal.showLoading();
                    }
                });

                fetch('/ChangeWorkflow/UpdateWorkflow', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: `ideaId=${ideaId}&newWorkflowId=${newWorkflowId}`
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            // Close modal first
                            if (changeWorkflowModal) {
                                changeWorkflowModal.hide();
                            }

                            // Show success message
                            Swal.fire({
                                icon: 'success',
                                title: 'Success!',
                                text: data.message || 'Workflow has been successfully changed!',
                                confirmButtonColor: '#3b82f6',
                                timer: 2000,
                                timerProgressBar: true
                            }).then(() => {
                                // Refresh table - check if filters are active
                                if (hasActiveFilters()) {
                                    applyFilters();
                                } else {
                                    window.location.reload();
                                }
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error!',
                                text: data.message || 'Failed to update workflow',
                                confirmButtonColor: '#dc2626'
                            });
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        Swal.fire({
                            icon: 'error',
                            title: 'Error!',
                            text: 'An error occurred while updating workflow',
                            confirmButtonColor: '#dc2626'
                        });
                    });
            }
        });
    }

