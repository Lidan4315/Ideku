@model Ideku.Models.Entities.Idea
@{
    var showActions = ViewData["ShowIdeaActions"] as bool? ?? false;
    // Disable edit/delete for inactive or rejected ideas
    var isIdeaDisabled = ViewBag.IsInactive == true || ViewBag.IsRejected == true;
}

<!-- Idea Details Section -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="m-0 font-weight-bold">
                <i class="bi bi-lightbulb me-2"></i>Idea Details
            </h5>

            @if (showActions && !Model.IsDeleted)
            {
                <div class="d-flex gap-2" module-access="idea_edit_delete">
                    <button type="button" class="btn btn-sm btn-primary idea-action-btn" data-bs-toggle="modal" data-bs-target="#editIdeaModal" title="Edit Idea" @(isIdeaDisabled ? "disabled" : "")>
                        <i class="bi bi-pencil me-md-1"></i><span class="d-none d-md-inline">Edit</span>
                    </button>
                    <button type="button" class="btn btn-sm btn-danger-custom idea-action-btn" id="deleteIdeaBtn" title="Delete Idea" @(isIdeaDisabled ? "disabled" : "")>
                        <i class="bi bi-trash me-md-1"></i><span class="d-none d-md-inline">Delete</span>
                    </button>
                </div>
            }
        </div>
    </div>
    <div class="card-body">
        <div class="form-group-view mb-3">
            <label>Idea Name</label>
            <p class="fw-bold">@Model.IdeaName</p>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group-view">
                    <label>Idea ID</label>
                    <p>@Model.IdeaCode</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group-view">
                    <label>Current Status</label>
                    <p><span class="badge bg-warning text-dark">@Model.CurrentStatus</span></p>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group-view">
                    <label>Submitted by</label>
                    <p>@Model.InitiatorUser.Name (@Model.InitiatorUser.EmployeeId)</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group-view">
                    <label>Submitted Date</label>
                    <p>@Model.SubmittedDate.ToString("dd MMMM yyyy HH:mm")</p>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group-view">
                    <label>Division</label>
                    <p>@Model.TargetDivision.NameDivision</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group-view">
                    <label>Department</label>
                    <p>@Model.TargetDepartment.NameDepartment</p>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group-view">
                    <label>Category</label>
                    <p>@Model.Category.CategoryName</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group-view">
                    <label>Event</label>
                    <p>@(Model.Event?.EventName ?? "-")</p>
                </div>
            </div>
        </div>
        <div class="form-group-view mb-3">
            <label>Idea Description</label>
            <div class="form-control-plaintext">@Model.IdeaIssueBackground</div>
        </div>
        <div class="form-group-view mb-3">
            <label>Idea Solution</label>
            <div class="form-control-plaintext">@Model.IdeaSolution</div>
        </div>
        <div class="form-group-view mb-3">
            <label>Saving Cost</label>
            <p>@Model.SavingCost.ToString("C0")</p>
        </div>
        @if (Model.SavingCostValidated.HasValue)
        {
            <div class="form-group-view mb-3">
                <label>Validated Saving Cost</label>
                <p><span class="text-success fw-bold">@Model.SavingCostValidated.Value.ToString("C0")</span></p>
            </div>
        }
    </div>
</div>