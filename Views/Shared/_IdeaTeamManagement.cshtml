                                <!-- Add User Button -->
                                @if (allUsers.Any())
                                {
                                    <div class="dropdown position-relative">
                                        <button type="button" class="btn dropdown-toggle tag-add-btn"
                                                id="addEditImplementatorBtn" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="bi bi-person-plus me-2"></i>Add Member
                                        </button>
                                        <ul class="dropdown-menu implementator-dropdown" aria-labelledby="addEditImplementatorBtn" id="editImplementatorDropdown">
                                            <!-- Search Input -->
                                            <li class="dropdown-search-container">
                                                <div class="px-3 py-2 border-bottom">
                                                    <input type="text"
                                                           class="form-control form-control-sm"
                                                           id="editImplementatorSearch"
