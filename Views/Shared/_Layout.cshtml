<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ideku</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- SweetAlert2 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    
    @if (Context.Request.Host.Host == "localhost" || Context.RequestServices.GetService<IWebHostEnvironment>()?.IsDevelopment() == true)
    {
        <!-- Development: Individual CSS files -->
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/shared/pagination.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/shared/form-view.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/shared/attachments.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/shared/inactive-idea.css" asp-append-version="true" />
        @await RenderSectionAsync("Styles", required: false)
    }
    else
    {
        <!-- Production: Bundled and minified CSS -->
        <link rel="stylesheet" href="~/bundles/app.css" asp-append-version="true" />
    }
</head>
<body class="modern-page">
    <!-- Mobile Top Navbar (Mobile Only) -->
    <nav class="mobile-navbar">
        <button class="hamburger-btn" id="sidebarToggle">
            <i class="bi bi-list"></i>
        </button>
        <div class="mobile-navbar-brand">
            <img src="~/images/IDEKU-logo.png" alt="Ideku" class="mobile-logo" />
        </div>
        <div class="mobile-user-menu dropdown">
            <button class="mobile-user-btn" type="button" id="mobileUserDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-person-circle"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="mobileUserDropdown">
                <li class="dropdown-header">
                    <strong>@User.Identity.Name</strong><br>
                    <small>@User.FindFirst("FullName")?.Value</small>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form asp-controller="Auth" asp-action="Logout" method="post">
                        <button type="submit" class="dropdown-item text-danger">
                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Sidebar Overlay (Mobile Only) -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <div class="page-container">
        <div class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <!-- Logo -->
                <div class="logo-container logo-only">
                    <img src="~/images/IDEKU-logo.png" alt="Ideku Logo" class="sidebar-logo" />
                </div>
            </div>

            <ul class="nav-links">
                <li module-access="dashboard">
                    <a asp-controller="Home" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")">
                        <i class="bi bi-house-door-fill"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li module-access="idea_create">
                    <a asp-controller="Idea" asp-action="Create" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Create" ? "active" : "")">
                        <i class="bi bi-plus-circle-fill"></i>
                        <span>Submit New Idea</span>
                    </a>
                </li>
                <li module-access="idea_list">
                    <a asp-controller="Idea" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Idea" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                        <i class="bi bi-list-task"></i>
                        <span>My Ideas</span>
                    </a>
                </li>
                <li module-access="idea_all">
                    <a asp-controller="IdeaList" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "IdeaList" ? "active" : "")">
                        <i class="bi bi-clipboard-data-fill"></i>
                        <span>Idea List</span>
                    </a>
                </li>
                <li module-access="approval">
                    <a asp-controller="Approval" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Approval" ? "active" : "")">
                        <i class="bi bi-patch-check-fill"></i>
                        <span>Need Approval</span>
                    </a>
                </li>
                <li module-access="milestone">
                    <a asp-controller="Milestone" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Milestone" ? "active" : "")">
                        <i class="bi bi-calendar2-week"></i>
                        <span>Milestone</span>
                    </a>
                </li>
                <li module-access="monitoring">
                    <a asp-controller="IdeaMonitoring" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "IdeaMonitoring" ? "active" : "")">
                        <i class="bi bi-display"></i>
                        <span>Monitoring</span>
                    </a>
                </li>

                <li class="nav-section">
                    <a href="#" class="nav-section-toggle" data-bs-toggle="collapse" data-bs-target="#settingsCollapse" aria-expanded="false" aria-controls="settingsCollapse">
                        <i class="bi bi-gear"></i>
                        <span>Settings</span>
                        <i class="bi bi-chevron-right toggle-icon"></i>
                    </a>
                    <div class="collapse" id="settingsCollapse">
                        <ul class="nav-section-items">
                            <li module-access="user_management">
                                <a asp-controller="UserManagement" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "UserManagement" ? "active" : "")">
                                    <i class="bi bi-person-fill-gear"></i>
                                    <span>User Management</span>
                                </a>
                            </li>
                            <li module-access="role_management">
                                <a asp-controller="RoleManagement" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "RoleManagement" ? "active" : "")">
                                    <i class="bi bi-briefcase-fill"></i>
                                    <span>Role Management</span>
                                </a>
                            </li>
                            <li module-access="workflow_management">
                                <a asp-controller="WorkflowManagement" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "WorkflowManagement" ? "active" : "")">
                                    <i class="bi bi-diagram-3-fill"></i>
                                    <span>Workflow Management</span>
                                </a>
                            </li>
                            <li module-access="approver_management">
                                <a asp-controller="ApproverManagement" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "ApproverManagement" ? "active" : "")">
                                    <i class="bi bi-person-check-fill"></i>
                                    <span>Approver Management</span>
                                </a>
                            </li>
                            <li module-access="change_workflow">
                                <a asp-controller="ChangeWorkflow" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "ChangeWorkflow" ? "active" : "")">
                                    <i class="bi bi-arrow-left-right"></i>
                                    <span>Change Workflow</span>
                                </a>
                            </li>
                            <li module-access="bypass_stage">
                                <a asp-controller="BypassStage" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "BypassStage" ? "active" : "")">
                                    <i class="bi bi-fast-forward-fill"></i>
                                    <span>Bypass Stage</span>
                                </a>
                            </li>
                            <li module-access="access_control">
                                <a asp-controller="AccessControl" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "AccessControl" ? "active" : "")">
                                    <i class="bi bi-shield-lock-fill"></i>
                                    <span>Access Control</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
            </ul>

            <div class="sidebar-footer">
                <div class="user-info">
                    <div class="user-avatar">
                        <i class="bi bi-person-circle"></i>
                    </div>
                    <div class="user-details">
                        <strong>@User.Identity.Name</strong>
                        <small>@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</small>
                    </div>
                    <form asp-controller="Auth" asp-action="Logout" method="post" class="logout-form">
                        <button type="submit" class="btn-logout" title="Logout">
                            <i class="bi bi-box-arrow-right"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="content-wrapper">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    @if (Context.Request.Host.Host == "localhost" || Context.RequestServices.GetService<IWebHostEnvironment>()?.IsDevelopment() == true)
    {
        <!-- Development: Individual JS files -->
        <script src="~/js/site.js" asp-append-version="true"></script>
        
        <!-- Global JavaScript Functions -->
        <script>
            function showComingSoon(featureName) {
                Swal.fire({
                    icon: 'info',
                    title: 'Coming Soon!',
                    text: `${featureName} feature is under development and will be available in future updates.`,
                    confirmButtonText: 'OK',
                    confirmButtonColor: '#3b82f6'
                });
            }

            // Mobile Sidebar Toggle
            document.addEventListener('DOMContentLoaded', function() {
                const sidebarToggle = document.getElementById('sidebarToggle');
                const sidebar = document.getElementById('sidebar');
                const sidebarOverlay = document.getElementById('sidebarOverlay');

                // Toggle sidebar on hamburger click
                if (sidebarToggle) {
                    sidebarToggle.addEventListener('click', function() {
                        sidebar.classList.toggle('open');
                        sidebarOverlay.classList.toggle('active');
                        document.body.style.overflow = sidebar.classList.contains('open') ? 'hidden' : '';
                    });
                }

                // Close sidebar when clicking overlay
                if (sidebarOverlay) {
                    sidebarOverlay.addEventListener('click', function() {
                        sidebar.classList.remove('open');
                        sidebarOverlay.classList.remove('active');
                        document.body.style.overflow = '';
                    });
                }

                // Close sidebar when clicking a navigation link on mobile
                const sidebarNavLinks = document.querySelectorAll('.sidebar .nav-links a');
                sidebarNavLinks.forEach(link => {
                    link.addEventListener('click', function(e) {
                        // Don't close sidebar if clicking on a toggle (like Settings dropdown)
                        if (this.classList.contains('nav-section-toggle') || this.hasAttribute('data-bs-toggle')) {
                            return;
                        }

                        if (window.innerWidth <= 768) {
                            sidebar.classList.remove('open');
                            sidebarOverlay.classList.remove('active');
                            document.body.style.overflow = '';
                        }
                    });
                });
            });

            // Auto-expand Settings section if user is in one of the settings pages
            document.addEventListener('DOMContentLoaded', function() {
                const settingsControllers = ['UserManagement', 'RoleManagement', 'WorkflowManagement',
                                            'ApproverManagement', 'ChangeWorkflow', 'BypassStage', 'AccessControl'];
                const currentController = '@ViewContext.RouteData.Values["Controller"]?.ToString()';
                const sidebar = document.querySelector('.sidebar');
                const navLinks = document.querySelector('.nav-links');

                // Restore sidebar scroll position from sessionStorage
                if (navLinks) {
                    const savedScrollPosition = sessionStorage.getItem('sidebarScrollPosition');
                    if (savedScrollPosition) {
                        navLinks.scrollTop = parseInt(savedScrollPosition);
                    }

                    // Save sidebar scroll position on scroll
                    navLinks.addEventListener('scroll', function() {
                        sessionStorage.setItem('sidebarScrollPosition', navLinks.scrollTop);
                    });
                }

                // Auto-expand Settings section
                if (settingsControllers.includes(currentController)) {
                    const settingsCollapse = document.getElementById('settingsCollapse');
                    const settingsToggle = document.querySelector('[data-bs-target="#settingsCollapse"]');

                    if (settingsCollapse && settingsToggle) {
                        const bsCollapse = new bootstrap.Collapse(settingsCollapse, {
                            show: true
                        });
                        settingsToggle.setAttribute('aria-expanded', 'true');

                        // After collapse is shown, ensure active link is visible
                        settingsCollapse.addEventListener('shown.bs.collapse', function() {
                            const activeLink = document.querySelector('.nav-section-items a.active');
                            if (activeLink && navLinks) {
                                // Small delay to ensure DOM is fully rendered
                                setTimeout(() => {
                                    const linkRect = activeLink.getBoundingClientRect();
                                    const navLinksRect = navLinks.getBoundingClientRect();

                                    // Check if active link is not fully visible in viewport
                                    if (linkRect.bottom > navLinksRect.bottom || linkRect.top < navLinksRect.top) {
                                        // Scroll to make active link visible with some padding
                                        activeLink.scrollIntoView({ behavior: 'smooth', block: 'center' });
                                    }
                                }, 100);
                            }
                        }, { once: true }); // Only fire once
                    }
                }
            });
        </script>
        
        @await RenderSectionAsync("Scripts", required: false)
    }
    else
    {
        <!-- Production: Bundled and minified JS -->
        <script src="~/bundles/app.js" asp-append-version="true"></script>
    }
</body>
</html>
