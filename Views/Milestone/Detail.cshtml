@section Scripts {
<script>
// Define ideaId in global scope to ensure accessibility
var ideaId = @Model.Idea.Id;

$(document).ready(function() {
    var currentUser = {
        name: '@(User.FindFirst(System.Security.Claims.ClaimTypes.GivenName)?.Value ?? User.Identity.Name ?? "Unknown User")',
        employeeId: '@(User.FindFirst("EmployeeId")?.Value ?? "Unknown")'
    };

    console.log('Initialized with ideaId:', ideaId);
    console.log('Current user info:', currentUser);

    // Initialize View Toggle
    initializeViewToggle();

    // Initialize PIC Selection
    initializePICSelection();

    // Initialize Calendar
    initializeCalendar();

    // Handle milestone form submission
    $('#addMilestoneForm').on('submit', function(e) {
        e.preventDefault();
        console.log('üîç Form submit event triggered!');

        // Collect form data
        const formData = {
            ideaId: ideaId,
            title: $('input[name="title"]').val(),
            note: $('textarea[name="note"]').val(),
            startDate: $('input[name="startDate"]').val(),
            endDate: $('input[name="endDate"]').val(),
            status: $('select[name="status"]').val(),
            creatorName: currentUser.name,
            creatorEmployeeId: currentUser.employeeId,
            selectedPICUserIds: getSelectedPICIds()
        };

        console.log('üìã Form data to submit:', formData);

        // Validate title
        if (!formData.title || formData.title.trim() === '') {
            console.log('‚ùå Validation failed: Title is empty');
            Swal.fire({
                icon: 'warning',
                title: 'Validation Error!',
                text: 'Please enter a milestone title.',
                confirmButtonColor: '#dc2626'
            });
            return;
        }
        console.log('‚úÖ Title validation passed');

        // Validate other required fields (dates and status have defaults, but check anyway)
        if (!formData.startDate || !formData.endDate || !formData.status) {
            console.log('‚ùå Validation failed: Missing required fields');
            Swal.fire({
                icon: 'warning',
                title: 'Validation Error!',
                text: 'Please fill in all required fields (Start Date, End Date, Status).',
                confirmButtonColor: '#dc2626'
            });
            return;
        }
        console.log('‚úÖ Required fields validation passed');

        // Validate PIC selection
        if (!formData.selectedPICUserIds || formData.selectedPICUserIds.length === 0) {
            console.log('‚ùå Validation failed: No PIC selected');
            Swal.fire({
                icon: 'warning',
                title: 'Validation Error!',
                text: 'Please select at least 1 Person In Charge (PIC).',
                confirmButtonColor: '#dc2626'
            });
            return;
        }
        console.log('‚úÖ PIC validation passed');

        // Validate creator information
        if (!formData.creatorName || formData.creatorName === 'Unknown User') {
            console.log('‚ùå Validation failed: Creator name invalid');
            Swal.fire({
                icon: 'error',
                title: 'Authentication Error!',
                text: 'Unable to identify current user. Please refresh the page and try again.',
                confirmButtonColor: '#dc2626'
            });
            return;
        }
        console.log('‚úÖ Creator validation passed');

        // Validate dates
        const startDate = new Date(formData.startDate);
        const endDate = new Date(formData.endDate);

        console.log('üìÖ Date validation:');
        console.log('  Start Date:', formData.startDate, '‚Üí', startDate);
        console.log('  End Date:', formData.endDate, '‚Üí', endDate);
        console.log('  Is endDate < startDate?', endDate < startDate);

        if (endDate < startDate) {
            console.log('‚ùå CLIENT-SIDE VALIDATION FAILED: End date before start date');
            Swal.fire({
                icon: 'warning',
                title: 'Validation Error!',
                text: 'End date cannot be before start date.',
                confirmButtonColor: '#dc2626'
            });
            return;
        }
        console.log('‚úÖ Date validation passed - Proceeding to server submission');

        // Show loading state
        const submitBtn = $(this).find('button[type="submit"]');
        const originalText = submitBtn.html();
        submitBtn.html('<i class="bi bi-hourglass-split me-2"></i>Creating...').prop('disabled', true);

        // Submit form
        $.post('@Url.Action("CreateMilestone", "Milestone")', formData)
            .done(function(response) {
                if (response.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
