// Edit Team Modal Functions
let selectedEditImplementators = [];
let editTeamModal;

function initializeEditTeamModal() {
    const modalElement = document.getElementById('editTeamModal');
    if (modalElement) {
        editTeamModal = new bootstrap.Modal(modalElement);
    }

    initializeEditTeamTagsInterface();

    // Handle edit form submission
    $('#editTeamForm').on('submit', function(e) {
        e.preventDefault();

        const currentImplementators = @Html.Raw(Json.Serialize(Model.Implementators.Select(i => new {
            id = i.Id,
            userId = i.UserId,
            userName = i.User.Name,
            role = i.Role
        })));

        // Get implementators to add and remove
        const { toAdd, toRemove } = getImplementatorChanges(currentImplementators, selectedEditImplementators);

        if (toAdd.length === 0 && toRemove.length === 0) {
            Swal.fire({
                icon: 'info',
                title: 'No Changes',
                text: 'No changes detected in team assembly.',
                confirmButtonColor: '#3b82f6'
            });
            return;
        }

        // Validate Leader constraint
        const leaders = selectedEditImplementators.filter(impl => impl.role === 'Leader');
        if (leaders.length > 1) {
            Swal.fire({
                icon: 'warning',
                title: 'Validation Error!',
                text: 'Only one Leader can be assigned per idea.',
                confirmButtonColor: '#dc2626'
            });
            return;
        }

        // Show confirmation dialog
        Swal.fire({
            title: 'Confirm Changes',
            text: 'Are the changes you made already correct?',
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#3b82f6',
            cancelButtonColor: '#6c757d',
            confirmButtonText: '<i class="bi bi-check-circle me-2"></i>Yes, Update',
            cancelButtonText: '<i class="bi bi-x-circle me-2"></i>Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                // Show loading
                const submitBtn = $('#editTeamForm').find('button[type="submit"]');
                const originalText = submitBtn.html();
                submitBtn.html('<i class="bi bi-hourglass-split me-2"></i>Updating...').prop('disabled', true);

                // Process changes
                processTeamChanges(toAdd, toRemove, submitBtn, originalText);
            }
        });
    });

    // Reset modal when closed
    $('#editTeamModal').on('hidden.bs.modal', function() {
        resetEditTeamSelection();
    });
}

function openEditTeamModal() {
    // Load current team members
    const currentImplementators = @Html.Raw(Json.Serialize(Model.Implementators.Select(i => new {
        userId = i.UserId.ToString(),
        userName = i.User.Name,
