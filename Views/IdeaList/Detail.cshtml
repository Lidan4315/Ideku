    updateEditImplementatorInfoPanel();
}

function getImplementatorChanges(currentImplementators, newImplementators) {
    const toAdd = [];
    const toRemove = [];

    // Find implementators to add
    newImplementators.forEach(newImpl => {
        const exists = currentImplementators.find(curr => curr.userId.toString() === newImpl.userId);
        if (!exists) {
            toAdd.push(newImpl);
        }
    });

    // Find implementators to remove
    currentImplementators.forEach(currImpl => {
        const exists = newImplementators.find(newImpl => newImpl.userId === currImpl.userId.toString());
        if (!exists) {
            toRemove.push(currImpl);
        }
    });

    return { toAdd, toRemove };
}

function processTeamChanges(toAdd, toRemove, submitBtn, originalText) {
    const ideaId = @Model.Idea.Id;

    // Prepare request payload
    const request = {
        ideaId: ideaId,
        implementatorsToRemove: toRemove.map(impl => impl.id),
        implementatorsToAdd: toAdd
    };

    // Single batch API call for update team
    $.ajax({
        url: '@Url.Action("UpdateTeamImplementators", "IdeaList")',
        type: 'POST',
        contentType: 'application/json',
        data: JSON.stringify(request),
        success: function(response) {
            // Restore button state
            submitBtn.html(originalText).prop('disabled', false);

            if (response.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Success!',
                    text: response.message,
                    confirmButtonColor: '#3b82f6'
                }).then(() => {
                    if (editTeamModal) {
                        editTeamModal.hide();
                    }
                    location.reload();
                });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: response.message,
                    confirmButtonColor: '#3b82f6'
                });
            }
        },
        error: function(xhr, status, error) {
            // Restore button state
            submitBtn.html(originalText).prop('disabled', false);

            console.error('Error updating team:', error);

            // Try to get error message from backend response
            let errorMessage = 'An error occurred while updating team implementators.';
            if (xhr.responseJSON && xhr.responseJSON.message) {
                errorMessage = xhr.responseJSON.message;
            }

            Swal.fire({
                icon: 'error',
                title: 'Error!',
                text: errorMessage,
                confirmButtonColor: '#3b82f6'
            });
        }
    });
}

// Edit Implementator Search Functionality
function initializeEditImplementatorSearch() {
    const searchInput = document.getElementById('editImplementatorSearch');
    const dropdownItems = document.querySelectorAll('.edit-implementator-item');
    const dropdown = document.getElementById('editImplementatorDropdown');

    if (!searchInput || !dropdownItems.length) return;

    // Prevent dropdown from closing when clicking on search input
    searchInput.addEventListener('click', function(e) {
        e.stopPropagation();
    });

    // Handle search input
    searchInput.addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase().trim();
        filterEditImplementatorItems(searchTerm, dropdownItems, dropdown);
    });

    // Handle keyboard navigation
    searchInput.addEventListener('keydown', function(e) {
        if (e.key === 'ArrowDown') {
            e.preventDefault();
            const visibleItems = Array.from(dropdownItems).filter(item => !item.classList.contains('d-none'));
            if (visibleItems.length > 0) {
                const firstButton = visibleItems[0].querySelector('.edit-role-btn');
                if (firstButton) firstButton.focus();
            }
        }
    });

    function filterEditImplementatorItems(searchTerm, items, container) {
        if (!searchTerm) {
            showAllEditItems(items);
            return;
        }

        let visibleCount = 0;

        items.forEach(item => {
            const searchText = item.getAttribute('data-search-text') || '';
            const userName = item.querySelector('.user-name')?.textContent?.toLowerCase() || '';
            const isHiddenBySelection = item.style.display === 'none';
            const matches = searchText.includes(searchTerm) || userName.includes(searchTerm);

            if (matches && !isHiddenBySelection) {
                item.classList.remove('d-none');
                visibleCount++;
            } else {
                item.classList.add('d-none');
            }
        });

        if (visibleCount === 0) {
            showEditNoResultsMessage(container, searchTerm);
        } else {
            removeEditNoResultsMessage(dropdown);
        }
    }

    function showAllEditItems(items) {
        items.forEach(item => {
            if (item.style.display !== 'none') {
                item.classList.remove('d-none');
            }
        });
        removeEditNoResultsMessage(dropdown);
    }

    function showEditNoResultsMessage(container, searchTerm) {
        removeEditNoResultsMessage(dropdown);

        const noResultsItem = document.createElement('li');
        noResultsItem.className = 'no-results-message';
        noResultsItem.innerHTML = `
            <div class="px-3 py-3 text-center text-muted">
                <i class="bi bi-search me-2"></i>
                No members found for "<strong>${searchTerm}</strong>"
            </div>
        `;

        container.appendChild(noResultsItem);
    }

    function removeEditNoResultsMessage(dropdown) {
        const existingMessage = dropdown.querySelector('.no-results-message');
        if (existingMessage) {
            existingMessage.remove();
        }
    }
}

