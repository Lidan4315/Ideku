@model Ideku.ViewModels.LevelManagement.LevelDetailsViewModel
@{
    ViewData["Title"] = "Level Details";
}

@section Styles {
    <link href="~/css/pages/level-management-details.css" rel="stylesheet" />
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Header Section -->
            <div class="page-header mb-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="d-flex align-items-center mb-2">
                            <a href="@Url.Action("Index", "LevelManagement")" class="btn btn-outline-secondary me-3" title="Back to Level List">
                                <i class="bi bi-arrow-left"></i>
                            </a>
                            <h2 class="page-title text-gradient mb-0">
                                <i class="bi bi-diagram-3 me-2"></i>Level Details
                            </h2>
                        </div>
                        <p class="text-muted">Detailed information about level configuration</p>
                    </div>
                    <div>
                        <!-- Buttons moved to Level Information section -->
                    </div>
                </div>
            </div>

            <!-- Level Information Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-info-circle me-2"></i>Level Information
                        </h5>
                        <div class="d-flex gap-2">
                            <button type="button" class="btn btn-sm btn-outline-primary" onclick="openEditLevelModal(@Model.Level.Id, '@Model.Level.LevelName', @Model.Level.IsActive.ToString().ToLower())">
                                <i class="bi bi-pencil me-1"></i>Edit
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="confirmDeleteLevel(@Model.Level.Id, '@Model.Level.LevelName')">
                                <i class="bi bi-trash me-1"></i>Delete
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-group mb-4">
                                <label class="info-label">Level ID</label>
                                <div class="info-value">
                                    <span class="badge bg-light text-dark fs-6 px-3 py-2">@Model.Level.Id</span>
                                </div>
                            </div>
                            
                            <div class="info-group mb-4">
                                <label class="info-label">Level Name</label>
                                <div class="info-value">
                                    <span class="badge bg-primary fs-6 px-3 py-2">@Model.Level.LevelName</span>
                                </div>
                            </div>
                            
                            <div class="info-group mb-4">
                                <label class="info-label">Status</label>
                                <div class="info-value">
                                    @{
                                        var statusClass = Model.Level.IsActive ? "bg-success" : "bg-danger";
                                        var statusText = Model.Level.IsActive ? "Active" : "Inactive";
                                        var statusIcon = Model.Level.IsActive ? "bi-check-circle" : "bi-x-circle";
                                    }
                                    <span class="badge @statusClass fs-6 px-3 py-2">
                                        <i class="@statusIcon me-2"></i>@statusText
                                    </span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="info-group mb-4">
                                <label class="info-label">Created Date</label>
                                <div class="info-value">
                                    <div class="text-dark fw-semibold">@Model.Level.CreatedAt.ToString("MMMM dd, yyyy")</div>
                                    <small class="text-muted">@Model.Level.CreatedAt.ToString("HH:mm:ss")</small>
                                </div>
                            </div>
                            
                            <div class="info-group mb-4">
                                <label class="info-label">Last Updated</label>
                                <div class="info-value">
                                    @if (Model.Level.UpdatedAt.HasValue)
                                    {
                                        <div class="text-dark fw-semibold">@Model.Level.UpdatedAt.Value.ToString("MMMM dd, yyyy")</div>
                                        <small class="text-muted">@Model.Level.UpdatedAt.Value.ToString("HH:mm:ss")</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Never updated</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>


            <!-- Level Approvers -->
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-people me-2"></i>Level Approvers
                        </h5>
                        <button type="button" class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addApproverModal">
                            <i class="bi bi-plus-circle me-1"></i>Add Approver
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Approvers.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var approver in Model.Approvers.OrderBy(a => a.ApprovalLevel))
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="ms-2 me-auto">
                                        <div class="fw-bold">@approver.RoleName</div>
                                        <small class="text-muted">
                                            Hierarchy Level: @approver.ApprovalLevel
                                        </small>
                                    </div>
                                    <div class="d-flex align-items-center gap-2">
                                        <div>
                                            @if (approver.IsPrimary)
                                            {
                                                <span class="badge bg-primary rounded-pill me-1">Primary</span>
                                            }
                                            <span class="badge bg-light text-dark rounded-pill">Level @approver.ApprovalLevel</span>
                                        </div>
                                        <button type="button" class="btn btn-outline-danger btn-sm" 
                                                onclick="confirmDeleteApprover(@approver.Id, '@approver.RoleName')" 
                                                title="Remove Approver">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-people display-6 text-muted mb-3"></i>
                            <p class="text-muted mb-0">No approvers assigned to this level</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Approver Modal -->
<div class="modal fade" id="addApproverModal" tabindex="-1" aria-labelledby="addApproverModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content level-modal">
            <div class="modal-header level-modal-header">
                <div class="d-flex align-items-center">
                    <div class="modal-icon">
                        <i class="bi bi-person-plus"></i>
                    </div>
                    <div>
                        <h5 class="modal-title mb-0" id="addApproverModalLabel">Add Level Approver</h5>
                        <small class="text-muted">Assign a new approver to this level</small>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="addApproverForm">
                <div class="modal-body level-modal-body">
                    <input type="hidden" id="levelId" name="levelId" value="@Model.Level.Id" />
                    
                    <!-- Role Selection -->
                    <div class="mb-4">
                        <label for="roleId" class="form-label">Role <span class="text-danger">*</span></label>
                        <div class="input-group input-group-enhanced">
                            <span class="input-group-text">
                                <i class="bi bi-person-badge"></i>
                            </span>
                            <select class="form-select" id="roleId" name="roleId" required>
                                <option value="">Select a role...</option>
                                @foreach (var role in Model.RoleList)
                                {
                                    <option value="@role.Value">@role.Text</option>
                                }
                            </select>
                        </div>
                        <div class="form-text">
                            <i class="bi bi-info-circle me-1"></i>
                            Choose the role that will act as an approver for this level
                        </div>
                    </div>
                    
                    <!-- Approval Level -->
                    <div class="mb-4">
                        <label for="approvalLevel" class="form-label">Approval Hierarchy <span class="text-danger">*</span></label>
                        <div class="input-group input-group-enhanced">
                            <span class="input-group-text">
                                <i class="bi bi-bar-chart-steps"></i>
                            </span>
                            <input type="number" class="form-control" id="approvalLevel" name="approvalLevel" required 
                                   min="1" max="10" placeholder="e.g. 1, 2, 3">
                        </div>
                        <div class="form-text">
                            <i class="bi bi-info-circle me-1"></i>
                            Enter the hierarchy level (1 = highest, 10 = lowest)
                        </div>
                    </div>
                    
                    <!-- Primary Status -->
                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="isPrimary" name="isPrimary" value="true">
                            <label class="form-check-label" for="isPrimary">
                                <strong>Primary Approver</strong>
                            </label>
                        </div>
                        <div class="form-text">
                            <i class="bi bi-info-circle me-1"></i>
                            Check if this is the primary approver for this level
                        </div>
                    </div>
                </div>
                <div class="modal-footer level-modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-2"></i>Cancel
                    </button>
                    <button type="submit" class="btn btn-primary btn-save">
                        <i class="bi bi-check-circle me-2"></i>Add Approver
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Level Modal -->
<div class="modal fade" id="editLevelModal" tabindex="-1" aria-labelledby="editLevelModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content level-modal">
            <div class="modal-header level-modal-header">
                <div class="d-flex align-items-center">
                    <div class="modal-icon">
                        <i class="bi bi-pencil-square"></i>
                    </div>
                    <div>
                        <h5 class="modal-title mb-0" id="editLevelModalLabel">Edit Level</h5>
                        <small class="text-muted">Update level configuration</small>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="editLevelForm">
                <div class="modal-body level-modal-body">
                    <input type="hidden" id="editLevelId" name="id">
                    
                    <!-- Level Name -->
                    <div class="mb-4">
                        <label for="editLevelName" class="form-label">Level Name <span class="text-danger">*</span></label>
                        <div class="input-group input-group-enhanced">
                            <span class="input-group-text">
                                <i class="bi bi-layers"></i>
                                LV
                            </span>
                            <input type="text" class="form-control" id="editLevelName" name="levelName" required 
                                   placeholder="E.G. 01, 02, MANAGER, ETC." style="text-transform: uppercase;">
                        </div>
                        <div class="form-text">
                            <i class="bi bi-info-circle me-1"></i>
                            Enter level identifier (will be prefixed with LV and converted to uppercase)
                        </div>
                    </div>
                    
                    <!-- Status -->
                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="editIsActive" name="isActive">
                            <label class="form-check-label" for="editIsActive">
                                <strong>Active Level</strong>
                            </label>
                        </div>
                        <div class="form-text">
                            <i class="bi bi-info-circle me-1"></i>
                            Inactive levels will not be available for new workflows
                        </div>
                    </div>
                </div>
                <div class="modal-footer level-modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-2"></i>Cancel
                    </button>
                    <button type="submit" class="btn btn-primary btn-save">
                        <i class="bi bi-check-circle me-2"></i>Update Level
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Set up URLs for level management details
        window.levelManagementUrls = {
            addApprover: '@Url.Action("AddApprover", "LevelManagement")',
            deleteApprover: '@Url.Action("DeleteApprover", "LevelManagement")',
            edit: '@Url.Action("Edit", "LevelManagement")',
            editBasic: '@Url.Action("EditBasic", "LevelManagement")',
            getLevel: '@Url.Action("GetLevel", "LevelManagement")',
            delete: '@Url.Action("Delete", "LevelManagement")'
        };
        
        // Open edit level modal function
        function openEditLevelModal(id, levelName, isActive) {
            // Set basic data
            document.getElementById('editLevelId').value = id;
            
            // Remove LV prefix for display
            var displayName = levelName.startsWith('LV') ? levelName.substring(2) : levelName;
            document.getElementById('editLevelName').value = displayName;
            
            document.getElementById('editIsActive').checked = isActive;
            
            // Show modal directly (no need to fetch approvers data)
            var editModal = new bootstrap.Modal(document.getElementById('editLevelModal'));
            editModal.show();
        }
    </script>
    <script src="~/js/pages/level-management-details.js"></script>
}